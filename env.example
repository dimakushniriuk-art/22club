# =====================================================
# üß† Supabase Configuration
# =====================================================
# Trova questi valori nel dashboard di Supabase > Settings > API

# URL del tuo progetto Supabase (formato: https://your-project-id.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Chiave anonima pubblica (client-safe) - sicura da esporre nel client-side
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Chiave di servizio Supabase (server-side ONLY) - NON esporre mai nel client
# Usa solo per operazioni server-side che richiedono privilegi elevati
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =====================================================
# üóÉÔ∏è Database Configuration (ORM: Prisma / Drizzle)
# =====================================================

# Connection pooling URL - per connessioni standard dell'app (migliori performance)
DATABASE_URL="postgresql://postgres.your-project-id:your-password@aws-0-your-region.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection URL - per migrazioni e operazioni amministrative
DIRECT_URL="postgresql://postgres.your-project-id:your-password@aws-0-your-region.pooler.supabase.com:5432/postgres"

# =====================================================
# üîî Push Notifications (VAPID Keys)
# =====================================================

# Genera con: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=mailto:admin@22club.it

# =====================================================
# üì± Expo Configuration (App Mobile React Native)
# =====================================================
# Variabili pubbliche per Expo - sicure da esporre nel client mobile

EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_KEY=your_supabase_anon_key

# =====================================================
# ‚è∞ Cron Jobs Secret (Task pianificati)
# =====================================================

CRON_SECRET=22club-cron-secret

# =====================================================
# üõ°Ô∏è Sentry Monitoring & Error Tracking
# =====================================================
# Trova questi valori nel dashboard di Sentry > Settings > Projects > 22Club

# DSN pubblico per il client-side (sicuro da esporre)
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/22club

# DSN per il server-side (pi√π sicuro, non esporre nel client)
SENTRY_DSN=https://your-dsn@sentry.io/22club

# Ambiente (development, staging, production)
NODE_ENV=development

# =====================================================
# üìß Email Configuration (Resend)
# =====================================================
# Configurazione provider email Resend per sistema comunicazioni
# Ottieni questi valori da: https://resend.com/dashboard

# API Key da dashboard Resend > API Keys
# Formato: re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_API_KEY=your_resend_api_key_here

# Email mittente (dev'essere verificata in Resend)
# Per sviluppo: puoi usare il dominio di test di Resend
# Per produzione: verifica il tuo dominio (es: noreply@22club.it)
RESEND_FROM_EMAIL=noreply@22club.it

# Nome mittente (opzionale, default: "22Club")
RESEND_FROM_NAME=22Club

# Webhook secret per verificare chiamate webhook (opzionale ma consigliato)
# Ottieni da: Resend Dashboard > Webhooks > [Your Webhook] > Signing Secret
# Formato: whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_WEBHOOK_SECRET=your_resend_webhook_secret_here

# =====================================================
# üì± SMS Configuration (Twilio)
# =====================================================
# Configurazione provider SMS Twilio per sistema comunicazioni
# Ottieni questi valori da: https://www.twilio.com/console

# Account SID da Twilio Dashboard > Account Info
# Formato: ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here

# Auth Token da Twilio Dashboard > Account Info (cliccare "View")
# ‚ö†Ô∏è IMPORTANTE: Non condividere mai questo token!
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Numero telefono Twilio (formato: +39XXXXXXXXXX)
# Ottieni da: Twilio Dashboard > Phone Numbers > Buy a number
TWILIO_PHONE_NUMBER=+39XXXXXXXXXX

# Webhook secret per verificare chiamate webhook (opzionale ma consigliato)
# Genera una stringa casuale sicura (es: openssl rand -hex 32)
TWILIO_WEBHOOK_SECRET=your_twilio_webhook_secret_here

# =====================================================
# üåê App URL (per webhook e tracking)
# =====================================================
# URL base dell'applicazione (usato per webhook e tracking pixel)
# Sviluppo locale: http://localhost:3001
# Produzione: https://22club.it (o il tuo dominio)

NEXT_PUBLIC_APP_URL=http://localhost:3001
